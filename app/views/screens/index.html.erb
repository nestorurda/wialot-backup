                <td><span id="id_outlet_sz-<%= idx %>"><%= o.id_outlet_sz %></span></td>
                <td><span id="outlet_name-<%= idx %>"><%= o.outlet_name %></span></td>
                <td><span id="product_name-<%= idx %>"><%= o.product_name %></span></td>
                <td><span id="product_display_name-<%= idx %>"><%= o.product_display_name %></span></td>
                <td><span id="pack_name-<%= idx %>"><%= o.pack_name %></span></td>
                <td><span id="pack_weight_kg-<%= idx %>"><%= o.pack_weight_kg %></span></td>
                <td><span id="outlet_fpm-<%= idx %>"><%= o.outlet_fpm %></span></td>
                <td><span id="outlet_status-<%= idx %>"><%= o.outlet_status %></span></td>   
